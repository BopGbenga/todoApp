<table>
  <tr>
    <th>Title</th>
    <th>Status</th>
    <th>action</th>
    <th>delete task</th>
  </tr>
  <% taskInfo.forEach(function(task) { %>
    <tr>
      <td><%= task.task_name %></td>
      <td><%= task.state %></td>
      <td>
      <form action="/task/update/<%= task._id %>?_method=PUT" method="POST"> 
        <input type="submit" value="UPDATE" class="btn">
      </form>
    </td>
    <td>
    <form action="/task/delete/<%= task._id %>?_method=delete" method="POST"> 
      <input type="submit" value="DELETE" class="btns">
  
    </form>
    </td>
    </tr>


  <% }); %>
</table>
<% } %>
